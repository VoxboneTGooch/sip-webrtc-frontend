extends layout

append head

  script.
    require([
      'angular',
      'controllers/editSIP'
    ],
    function (angular, EditSIPController) {
      angular.module('sip-webrtc-frontend', [])
        .controller('EditSIPController', EditSIPController);
      angular.bootstrap(document, ['sip-webrtc-frontend']);
    });

block content
  .site-wrapper-inner.home-wrap
    .body.edit-sip(ng-controller='EditSIPController' ng-init="init()")
      .container
        .col-xs-6
          .row
            .register-content.ng-cloak
              h4 SIP Registrar
              p Lorem ipsum dolor sit amet, consectetur adipiscing elit
              .checkbox
                label
                  input(type="checkbox" disabled checked)
                  |Allow calls to the internal SIP URI
                  span.badge(data-toggle='tooltip' data-placement="right" title="Lorem") ?
              .checkbox
                label
                  input(type="checkbox" ng-model="registrar_enabled")
                  |Sip Registrar
                  span.badge(data-toggle='tooltip' data-placement="right" title="Lorem") ?
              section
                form(name="sip_form")
                  .boxPanel
                    .sip-details(ng-show="registrar_enabled")
                      .form-group
                        label SIP Registrar
                          span.badge(data-toggle='tooltip' data-placement="right" title="Lorem") ?
                        input.form-control(type="text" name="remoteSipUri" ng-model="bridge.remoteSipUri" ng-pattern="/^[^@]+@[^@]+$/" check-allowed-sip auto-focus required placeholder= "SIP registrar")
                      .form-group
                        label Name
                          span.badge(data-toggle='tooltip' data-placement="right" title="Lorem") ?
                        input.form-control(type="text" name="remoteSipUri" ng-model="bridge.remoteSipUri" ng-pattern="/^[^@]+@[^@]+$/" check-allowed-sip auto-focus required placeholder= "Your name")
                      .form-group
                        label SIP username
                          span.badge(data-toggle='tooltip' data-placement="right" title="Lorem") ?
                        input.form-control(type="text" name="remoteSipUri" ng-model="bridge.remoteSipUri" ng-pattern="/^[^@]+@[^@]+$/" check-allowed-sip auto-focus required placeholder= "Sip username")
                      .form-group
                        label SIP Password
                          span.badge(data-toggle='tooltip' data-placement="right" title="Lorem") ?
                        input.form-control(type="text" name="remoteSipUri" ng-model="bridge.remoteSipUri" ng-pattern="/^[^@]+@[^@]+$/" check-allowed-sip auto-focus required placeholder= "Sip password")
        .col-xs-6
          .register-content.ng-cloak
            h4 Allowed IP addresses
            p Lorem ipsum dolor sit amet, consectetur adipiscing elit
            section
              form(name="sip_form")
                .boxPanel#allowed-ips
                  .form-group
                    input.form-control(type="text" name="remoteSipUri" ng-model="bridge.remoteSipUri" ng-pattern="/^[^@]+@[^@]+$/" check-allowed-sip auto-focus required placeholder= "Allowed IP")

                button.btn.manage-ips(ng-click="addAllowedIp()")
                  span.glyphicon.glyphicon-triangle-bottom
                button.btn.manage-ips(ng-click="removeAllowedIp()")
                  span.glyphicon.glyphicon-triangle-top

          .form-group(ng-cloak)
            button.btn.btn-default-custom.pull-right.button-block(ng-click="skipURI('/edit-bridge')" name="skipBtn") Save

            .clearfix


